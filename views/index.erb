<script>
 $( function() {
   var availableTags = [
    <% @actors.each do |actor| %>
      "<%= actor.name %>",
    <% end %>
   ];
   $( ".tags" ).autocomplete({
     source: availableTags,
     minLength: 3,
   });
 } );
 </script>

